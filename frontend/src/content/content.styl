#popup 
  position: fixed
  width: 400px
  height: 400px
  top: 50% 
  left: 50% 

  /* Set the position to centre */
  transform: translate(-50%, -50%)
  padding: 10px
  background-color: white
  border: 1px solid black
  z-index: 9999
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2)
  border-radius: 8px


#detection-text
  height: 200px
  overflow: auto

#close-popup 
  margin-top: 10px
  padding: 5px 10px
  background-color: #007BFF
  color: white
  border: none
  border-radius: 5px
  cursor: pointer

