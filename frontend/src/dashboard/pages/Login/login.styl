.P-login
  width: 100%
  height 100vh 

  .login-page-wrapper
    display flex
    width 100%
    height 100%
    flex-direction column
    align-items center
    justify-content: center

    .title-wrapper
      display: flex
      align-content: center

      .title
        font-size: 56px
        letter-spacing: 2px

    .content-wrapper
      width: 30%
      text-align: center

      .content-info-wrapper
        .signin-prompt
          font-size: 16px

      .signin-content-wrapper
        margin-top: 5%
        margin-bottom: 3%
        
        .signin-content
          margin-bottom: 5%

          .signin-input-item
            text-align: left

            .signin-input
              margin-top: 5%
              text-align: left

          .error-message
              margin-top -3%
              text-align: left
              color: red

          .signin-btn
              width 100%
              margin-top: 5%
              color: white
              background-color: black

      .signup-prompt-wrapper
        display: flex
        width: fit-content
        margin-top: 3%
        margin-left: 2%
        margin-bottom: 10%
        justify-content: center
        text-align: center

        .signup-prompt
          color: #c0c0c0
          transition: color 0.3 ease
          cursor pointer

        .signup-prompt:hover
          color: black

      .third-party-signin-wrapper
        .third-party-signin-prompt-wrapper
          display: flex
          width: 100%
          margin-top: 3%
          margin-bottom: 5%
          align-items: center
          justify-content: center

          .third-party-signin-prompt
            color: #c0c0c0
            white-space: nowrap

          .line
            flex: 1;
            border none
            border-bottom: 1px solid #ccc
            margin: 0 1rem

        .third-party-signin-opt-wrapper
          display: flex
          width: 100%
          margin-bottom: 8%
          justify-content: space-around

          .third-party-signin-opt
            width 35%

      