.P-password-reset
  position: relative
  width: 100%
  height: 100vh

  .back-wrapper
    position: absolute
    top: 20px
    left: 20px
    z-index: 9999

    .back
      cursor: pointer

  .password-reset-page-wrapper
    position: relative
    display: flex
    width: 100%
    height: 100%
    flex-direction: column
    align-items: center
    justify-content: center

    .title-wrapper
      display: flex
      align-items: center
      justify-content: center
      margin-bottom: 3%

      .title
        font-size: 48px
        letter-spacing: 2px
        color: #333

    .content-wrapper
      width: 90%
      margin-top: 5%
      margin-bottom: 3%
      max-width: 500px // 设置最大宽度
      margin: 0 auto
      text-align: center

      .content-info-wrapper
        .reset-prompt
          font-size: 16px
          color: #666

      .password-reset-form
        text-align: left
        margin-bottom: 2%

        .reset-input-item
          margin-bottom: 8%

        .input-item // 统一输入框样式
          text-align: left // 确保文字从左对齐
          width: 100% // 占满父容器
          max-width: 500px // 设置最大宽度
          height: 40px
          padding: 0 12px
          font-size: 16px
          border: 1px solid #d9d9d9
          border-radius: 4px
          box-sizing: border-box
          ::placeholder // 占位符样式
            text-align: left
            color: #999

        .btn-wrapper
          display: flex
          justify-content: center
          margin-top: 12%

      .error-message
        color: red
        font-size: 12px
        margin-top: 4px
        display: block
