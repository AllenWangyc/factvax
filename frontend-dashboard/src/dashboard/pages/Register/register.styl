.P-register
  position: relative
  width: 100%
  height: 100vh

  .back-wrapper
    position: absolute 
    top: 20px
    left: 20px
    z-index: 9999

    .back
      cursor: pointer

  .register-page-wrapper
    position: relative
    display: flex
    width: 100%
    height: 100%
    flex-direction: column
    align-items: center
    justify-content: center

    .title-wrapper
      display: flex
      align-content: center

      .title
        font-size: 56px
        letter-spacing: 2px
        color: #333

    .content-wrapper
      text-align: center

      .content-info-wrapper
        .signup-prompt
          font-size: 16px
          color: #666

      .signup-content-wrapper
        margin-top: 5%
        margin-bottom: 3%

        .signup-content-form
          text-align: left
          margin-bottom: 2%

          .username-wrapper
            display: flex
            justify-content: space-between

            .username-form-item
              width: 45%

          .signup-input-item
            margin-bottom: 5%

        .signup-btn-item
          margin-top: 8%

          .signup-btn
            width: 100%
            color: white
            background-color: black
            border: none
            border-radius: 4px
            padding: 10px 0
            font-size: 16px
            cursor: pointer
            transition: background-color 0.3s ease

          .signup-btn:hover
            background-color: #333

      .term-info-wrapper
        margin-left: 0
        margin-right: 0
        text-align: left
        display: flex
        align-items: center

        .term-checkbox
          appearance: none
          width: 16px
          height: 16px
          border: 1px solid #333
          border-radius: 4px
          cursor: pointer
          display: inline-block
          position: relative
          margin-right: 8px

          &:checked::after
            content: ''
            position: absolute
            top: 2px
            left: 6px
            width: 5px
            height: 10px
            border: solid #333
            border-width: 0 2px 2px 0
            transform: rotate(45deg)

        .term-info
          display: inline-block
          font-size: 14px
          color: #333

        .term-info a
          color: #007bff
          text-decoration: underline
          font-weight: bold

      .error-message
        color: red
        font-size: 12px
        margin-top: 4px
        display: block
