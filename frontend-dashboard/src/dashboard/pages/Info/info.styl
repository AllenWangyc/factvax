.info-container
  padding 20px
  font-family 'Arial, sans-serif'
  color #333
  max-width 800px
  margin 0 auto
  background-color #fff
  box-shadow 0px 4px 6px rgba(0, 0, 0, 0.1)
  border-radius 8px

.info-title
  font-size 2em
  margin-bottom 20px
  text-align center
  font-weight bold
  color #222

.info-section
  margin-bottom 30px

.info-subtitle
  font-size 1.5em
  margin-bottom 15px
  font-weight bold
  color #444

.info-heading
  font-size 1.2em
  margin-top 15px
  margin-bottom 10px
  font-weight bold
  color #555

ul
  margin-left 20px
  list-style-type disc

li
  margin-bottom 10px
  line-height 1.6


.btn-wrapper
  display: flex
  justify-content: center

.info-back-button:hover
  background-color #0056b3
