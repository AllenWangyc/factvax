.tc-container
  padding 20px
  font-family 'Arial, sans-serif'
  color #333
  max-width 800px
  margin 0 auto
  background-color #fff
  box-shadow 0px 4px 6px rgba(0, 0, 0, 0.1)
  border-radius 8px

.tc-title
  font-size 2em
  margin-bottom 20px
  text-align center
  font-weight bold
  color #222

.tc-section
  margin-bottom 30px

.tc-subtitle
  font-size 1.5em
  margin-bottom 15px
  font-weight bold
  color #444

.tc-heading
  font-size 1.2em
  margin-top 15px
  margin-bottom 10px
  font-weight bold
  color #555

ul
  margin-left 20px
  list-style-type disc

li
  margin-bottom 10px
  line-height 1.6

.tc-back-button
  display inline-block
  margin-top 20px
  padding 10px 20px
  font-size 1em
  background-color #007bff
  color #fff
  border none
  border-radius 4px
  cursor pointer
  text-align center
  text-decoration none
  transition all 0.3s ease

.tc-back-button:hover
  background-color #0056b3
