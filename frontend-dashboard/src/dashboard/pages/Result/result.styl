.P-result
  display: flex
  width: 100%
  margin: 0
  font-family: Arial, sans-serif
  background-color: #fff
  justify-content: center

  .page-container
    display: flex
    width: 60%
    background-color: #fff
    flex-direction: column
    align-items: center
    // 添加响应式适配
    @media screen and (max-width: 1200px)
      width: 80%
    @media screen and (max-width: 768px)
      width: 95%

    .header
      text-align: center

    .result-section-wrapper
      display: flex
      width: 90%
      flex-direction: column
      justify-content: center
      gap: 16px

      .result-card
        width: 100%

        .result-content
          .detection-text-wrapper
            margin-bottom: 3%

            .detection-text
              font-size: 16px
              @media screen and (max-width: 768px)
                font-size: 14px

          .result-status-wrapper
            display: flex
            flex-direction: column
            margin-bottom: 3%

            .result-status-content-container
              display: flex
              align-items: center
              gap: 8px

              .credible-icon
                font-size: 18px
                @media screen and (max-width: 768px)
                  font-size: 16px

              .result-status-wrapper
                display: flex
                margin-bottom: 0
                align-content: center

                .result-status
                  font-size: 18px
                  @media screen and (max-width: 768px)
                    font-size: 16px

                  // 动态状态颜色
                  &.credible
                    color: #6acc39 // 绿色
                  &.misinformation
                    color: #ff4d4f // 红色
                  &.unrelated
                    color: #ffcc00 // 黄色

          .result-explanation-wrapper, .result-vaccine-type-wrapper, .result-confidence-wrapper, .result-correction-wrapper
            margin-bottom: 3%

            .result-explanation
              font-size: 16px
              @media screen and (max-width: 768px)
                font-size: 14px

        .line
          flex: 1
          border: none
          border-bottom: 1px solid #ccc
          margin: 0 1rem

        .timestamp-wrapper
          margin-top: 2%

      .detailed-info-container
        width: 100%
        margin-left: 3%

        .detailed-info-content-container
          .detailed-info-item-wrapper
            margin-top: 2%

            .detailed-info-item
              font-size: 16px
              @media screen and (max-width: 768px)
                font-size: 14px

    .btn-container
      margin-top: 20px
      padding-bottom: 50px
