#popup 
  position: fixed
  width: 400px
  height: 400px
  top: 50% 
  left: 50% 

  /* Set the position to centre */
  transform: translate(-50%, -50%)
  padding: 5px
  background-color: white
  border: 1px solid black
  z-index: 9999
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2)
  border-radius: 8px

  .result-icon
    font-size: 24px
    margin-left: 8px
    margin-right: 5px
  
#poopup-title-wrapper
  text-align: center

#popup-title
  font-family: Arial, Helvetica, sans-serif

#popup-content
  padding 5px
  color: black

  .loading-wrapper
    display: flex
    height: 100%
    width 100%
    justify-content: center
    align-content: center

  .display-wrapper
    .detection-result
      display: flex
      align-content: center        

    .detection-text
      margin-top: 20px
      height: 200px
      overflow: auto

#close-popup 
  position: absolute
  bottom: 20px
  left: 50%
  transform: translateX(-50%)
  padding: 5px 10px
  background-color: #007BFF
  color: white
  border: none
  border-radius: 5px
  cursor: pointer

