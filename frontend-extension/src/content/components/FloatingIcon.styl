#floating-icon
  position absolute
  display none
  width 24px
  height 24px
  background-image url("/images/vaccine_icon.png")
  background-size cover
  cursor pointer
  z-index 9999
  border-radius 50%
  box-shadow 0px 4px 6px rgba(0, 0, 0, 0.1)
  transition transform 0.2s


#floating-icon:hover
  transform scale(1.2)