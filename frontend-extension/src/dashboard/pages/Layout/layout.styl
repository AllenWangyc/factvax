.P-layout-wrapper
  width 100%
  height 100vh

  .header-layout
    height 8%
    .header
      display flex
      height 100%
      background-color white
      justify-content right
      align-items: center

      .status-container
        display: flex
        align-items: center

        .log-opt-wrapper
          margin-right: 20px

          .log-opt
            cursor: pointer
            padding: 3px 0

          .log-opt:hover
            color: #71a2ff
            border-bottom: solid 1px


  
  .main-layout
    height 92%
    overflow: hidden

    .sider
      position: fixed
      left: 0
      top: 8%
      bottom: 0
      width: 200px
      z-index: 1000
      background-color: white

    .content
      margin-left: 200px
      height 100%
      overflow-y: auto
    
      