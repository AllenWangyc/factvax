.P-history
  width 100%
  height 100%
  margin 0
  font-family Arial, sans-serif
  background-color #f8f9fa

  .upper-card
    .upper-content-container
      .upper-search-content
        display: flex

        .upper-search-wrapper
          width 30%

        .filter-container
          margin-left: 10px
          align-content: center

          .filter
            font-size: 18px
          .filter-active
            color: #1677ff

      .filter-form
        margin-top: 1%

        .filter-form-item-wrapper
          display: flex
          
          .filter-form-source, .filter-form-result
            width: 20%
            margin-left: 5%

        .filter-form-btn
          margin-top: 30px
          font-size: 14px

  .record-list-container
    .record-list-table
      .record-item-text
        cursor: pointer
